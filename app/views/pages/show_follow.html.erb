<% provide(:title, @title) %>
<div class="row">
   <div class="span8">
    <br/><br/>
   <div>
      <h2><%= @title %> of <%= @user.name %></h2>
      <centre>
        <%= paginate @users, :theme => 'twitter-bootstrap-3', 
            :pagination_class => "pagination-lg" %>
        <%= link_to "Back", usershow_path(@user) %>
      </centre>
    </div>
    <% if @users.any? %>
      <ul class="users">
        <% @users.each do |user| %>
          <div class="col-md-5">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3>
                  <%= link_to user.name , usershow_path(user) %>
                </h3>
              </div>
              <div class="panel-body panelbodylead">
                <b>Email :</b>
                <%= user.email %><br>
                <b>Location : </b>
                <%= user.location %>
              </div>
            </div>
          </div>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>