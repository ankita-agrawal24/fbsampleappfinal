<% provide(:title, 'new Album') %>
<h2>New Album Page</h2>

<div class="row">
  <div class="span6 offset3">
	<%= form_tag albums_path, :method => :post , :html => { :multipart => true } do |f| %>
	 <%#= notice %>
		<ul class="list-group">	
		  	<li class="list-group-item">
			  	<h4>Album Name
			  		<span class="label label-default">
						<%= text_field_tag :name,"",:name => "album[name]" %>
					</span>
				</h4><br />
		  	</li>

		  	<li class="list-group-item">
		  		<h4>Description
		  			<span class="label label-default">
		  				<%= text_field_tag  :description,"",
		  				                    :name => "album[description]" %>
					</span>
				</h4><br />
		  	</li>

		  	 <li class="list-group-item">
		  		<h4>Scope
		  			<span class="label label-default">
		  				<%= select_tag :scope, options_for_select(%w[Public Friends Private]),:name => "album[scope]" %>
					</span>
				</h4><br />
		  	</li>
		  	<%= submit_tag "Create Album",  :class => "btn btn-primary btn-large " %>
		</ul>
	 <% end %>
	</div>
</div>